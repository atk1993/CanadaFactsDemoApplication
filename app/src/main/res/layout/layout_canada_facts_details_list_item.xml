<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootItemLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardBackgroundColor="@android:color/white"
  card_view:cardCornerRadius="@dimen/size_5dp"
  card_view:cardElevation="@dimen/size_4dp"
  card_view:cardUseCompatPadding="true">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/canadaFactsDetailsTitleItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/colorTitle"
      android:textSize="@dimen/titleTextSize"
      android:textStyle="bold" />
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/canadaFactsDetailsTitleItem"
      android:layout_marginTop="@dimen/size_5dp">
      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/canadaFactsDetailsDescriptionItem"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/canadaFactsDetailsImageItem"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/descriptionTextSize" />
      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/canadaFactsDetailsImageItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_4dp"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:scaleType="center" />
    </RelativeLayout>
  </RelativeLayout>
</androidx.cardview.widget.CardView>